<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.remotehomeaccess"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.remotehomeaccess.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.remotehomeaccess.StatusActivity"
            android:label="@string/title_activity_status" >
        </activity>
        <activity
            android:name="com.example.remotehomeaccess.LightsActivity"
            android:label="@string/title_activity_lights" >
        </activity>
        <activity
            android:name="com.example.remotehomeaccess.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.remotehomeaccess.HawkEyeActivity"
            android:label="@string/title_activity_hawk_eye" >
        </activity>
		<activity android:name=".SecurityCam"
            android:label="@string/title_activity_security_cam"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
